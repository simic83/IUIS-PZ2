<!-- Path: NetworkService/Views/ToastWindow.xaml -->
<Window x:Class="NetworkService.Views.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False"
        Topmost="True" AllowsTransparency="True" Background="Transparent"
        SizeToContent="WidthAndHeight" MinWidth="320" MaxWidth="420"
        Opacity="0">
    <Border CornerRadius="8" Padding="14"
            Background="#252525" BorderBrush="#444" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="28"/>
            </Grid.ColumnDefinitions>

            <!-- Ikonica -->
            <TextBlock x:Name="Icon"
                       Grid.Column="0"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="16"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="#0f0"
                       Text="&#xE73E;"/>

            <!-- Poruka -->
            <TextBlock x:Name="MessageText"
                       Grid.Column="1"
                       Margin="8,2,8,2"
                       TextWrapping="Wrap"
                       Foreground="White"
                       FontSize="13" />

            <!-- X -->
            <Button Grid.Column="2"
                    Width="22" Height="22"
                    Background="#333" Foreground="White"
                    BorderBrush="#555" BorderThickness="1"
                    Cursor="Hand" Padding="0"
                    Click="Close_Click">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE10A;" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </Grid>
    </Border>
</Window>
