<Window x:Class="NetworkService.Views.ConfirmationDialog"



        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"


        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"


        Title="Confirm Action"


        WindowStyle="None"


        ResizeMode="NoResize"


        WindowStartupLocation="CenterOwner"


        AllowsTransparency="True"


        Background="Transparent"


        ShowInTaskbar="False"


        Width="400"


        SizeToContent="Height">





    <Window.Resources>


        <!-- Button Style -->


        <Style x:Key="DialogButton" TargetType="Button">


            <Setter Property="Background" Value="#444"/>


            <Setter Property="Foreground" Value="White"/>


            <Setter Property="Padding" Value="20,8"/>


            <Setter Property="Margin" Value="5"/>


            <Setter Property="MinWidth" Value="80"/>


            <Setter Property="Cursor" Value="Hand"/>


            <Setter Property="FontSize" Value="13"/>


            <Setter Property="Template">


                <Setter.Value>


                    <ControlTemplate TargetType="Button">


                        <Border x:Name="border" 


                                Background="{TemplateBinding Background}"


                                CornerRadius="4"


                                Padding="{TemplateBinding Padding}">


                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>


                        </Border>


                        <ControlTemplate.Triggers>


                            <Trigger Property="IsMouseOver" Value="True">


                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>


                            </Trigger>


                            <Trigger Property="IsPressed" Value="True">


                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>


                            </Trigger>


                        </ControlTemplate.Triggers>


                    </ControlTemplate>


                </Setter.Value>


            </Setter>


        </Style>


    </Window.Resources>





    <!-- Main Border with Shadow -->


    <Border Background="#222" 


            BorderBrush="#444" 


            BorderThickness="1" 


            CornerRadius="8">


        <Border.Effect>


            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>


        </Border.Effect>





        <Grid>


            <Grid.RowDefinitions>


                <RowDefinition Height="Auto"/>


                <RowDefinition Height="Auto"/>


                <RowDefinition Height="Auto"/>


                <RowDefinition Height="Auto"/>


            </Grid.RowDefinitions>





            <!-- Title Bar -->


            <Border Grid.Row="0" 


                    Background="#1a1a1a" 


                    CornerRadius="8,8,0,0"


                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">


                <Grid>


                    <Grid.ColumnDefinitions>


                        <ColumnDefinition Width="Auto"/>


                        <ColumnDefinition Width="*"/>


                        <ColumnDefinition Width="Auto"/>


                    </Grid.ColumnDefinitions>





                    <!-- Icon -->


                    <TextBlock Grid.Column="0"


                               x:Name="TitleIcon"


                               FontFamily="Segoe MDL2 Assets"


                               FontSize="16"


                               Text="&#xE7BA;"


                               Foreground="#fa0"


                               Margin="12,10"


                               VerticalAlignment="Center"/>





                    <!-- Title -->


                    <TextBlock Grid.Column="1"


                               x:Name="TitleText"


                               Text="Confirm Delete"


                               Foreground="White"


                               FontSize="14"


                               FontWeight="Bold"


                               VerticalAlignment="Center"/>





                    <!-- Close Button -->


                    <Button Grid.Column="2"


                            x:Name="CloseButton"


                            Width="30" Height="30"


                            Background="Transparent"


                            Foreground="#888"


                            BorderThickness="0"


                            Cursor="Hand"


                            Click="CloseButton_Click">


                        <TextBlock FontFamily="Segoe MDL2 Assets" 


                                   Text="&#xE10A;" 


                                   FontSize="12"/>


                    </Button>


                </Grid>


            </Border>





            <!-- Message Content -->


            <StackPanel Grid.Row="1" Margin="20,20,20,10">


                <!-- Main Question -->


                <TextBlock x:Name="MessageText"


                           Text="Are you sure you want to delete this server?"


                           Foreground="White"


                           FontSize="14"


                           TextWrapping="Wrap"


                           Margin="0,0,0,15"/>





                <!-- Details Section -->


                <Border x:Name="DetailsSection"


                        Background="#1a1a1a"


                        BorderBrush="#333"


                        BorderThickness="1"


                        CornerRadius="4"


                        Padding="12"


                        Visibility="Collapsed">


                    <StackPanel>


                        <TextBlock Text="Server Details:" 


                                   Foreground="#888" 


                                   FontSize="11"


                                   FontWeight="Bold"


                                   Margin="0,0,0,8"/>





                        <Grid x:Name="DetailsGrid">


                            <Grid.ColumnDefinitions>


                                <ColumnDefinition Width="Auto"/>


                                <ColumnDefinition Width="*"/>


                            </Grid.ColumnDefinitions>


                            <Grid.RowDefinitions>


                                <RowDefinition Height="Auto"/>


                                <RowDefinition Height="Auto"/>


                                <RowDefinition Height="Auto"/>


                                <RowDefinition Height="Auto"/>


                            </Grid.RowDefinitions>





                            <!-- ID -->


                            <TextBlock Grid.Row="0" Grid.Column="0" 


                                       Text="ID:" Foreground="#666" 


                                       FontSize="12" Margin="0,2,10,2"/>


                            <TextBlock Grid.Row="0" Grid.Column="1" 


                                       x:Name="ServerIdText" 


                                       Foreground="#aaa" 


                                       FontSize="12"/>





                            <!-- Name -->


                            <TextBlock Grid.Row="1" Grid.Column="0" 


                                       Text="Name:" Foreground="#666" 


                                       FontSize="12" Margin="0,2,10,2"/>


                            <TextBlock Grid.Row="1" Grid.Column="1" 


                                       x:Name="ServerNameText" 


                                       Foreground="#aaa" 


                                       FontSize="12"


                                       FontWeight="Bold"/>





                            <!-- Type -->


                            <TextBlock Grid.Row="2" Grid.Column="0" 


                                       Text="Type:" Foreground="#666" 


                                       FontSize="12" Margin="0,2,10,2"/>


                            <TextBlock Grid.Row="2" Grid.Column="1" 


                                       x:Name="ServerTypeText" 


                                       Foreground="#aaa" 


                                       FontSize="12"/>





                            <!-- IP -->


                            <TextBlock Grid.Row="3" Grid.Column="0" 


                                       Text="IP:" Foreground="#666" 


                                       FontSize="12" Margin="0,2,10,2"/>


                            <TextBlock Grid.Row="3" Grid.Column="1" 


                                       x:Name="ServerIpText" 


                                       Foreground="#aaa" 


                                       FontSize="12"/>


                        </Grid>


                    </StackPanel>


                </Border>


            </StackPanel>





            <!-- Warning Message -->


            <StackPanel Grid.Row="2" 


                        Orientation="Horizontal" 


                        Margin="20,0,20,15"


                        x:Name="WarningPanel"


                        Visibility="Visible">


                <TextBlock FontFamily="Segoe MDL2 Assets"


                           Text="&#xE7BA;"


                           Foreground="#f66"


                           FontSize="12"


                           Margin="0,0,8,0"/>


                <TextBlock Text="Please confirm this action"


                           Foreground="#f99"


                           FontSize="12"/>


            </StackPanel>





            <!-- Buttons -->


            <StackPanel Grid.Row="3" 


                        Orientation="Horizontal"


                        HorizontalAlignment="Right"


                        Margin="20,0,20,20">





                <!-- Cancel Button -->


                <Button x:Name="CancelButton"


                        Content="Cancel"


                        Style="{StaticResource DialogButton}"


                        Click="CancelButton_Click"/>





                <!-- Confirm Button -->


                <Button x:Name="ConfirmButton"


                        Style="{StaticResource DialogButton}"


                        Background="#a44"


                        Click="ConfirmButton_Click">


                    <StackPanel Orientation="Horizontal">


                        <TextBlock FontFamily="Segoe MDL2 Assets"


                                   Text="&#xE74D;"


                                   FontSize="14"


                                   Margin="0,0,8,0"/>


                        <TextBlock Text="Delete"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>