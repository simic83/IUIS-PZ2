<!-- GraphView.xaml -->
<UserControl x:Class="NetworkService.Views.GraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:NetworkService.Converters"
             Background="#1a1a1a">

    <UserControl.Resources>
        <!-- Add the InvertedHeightConverter here -->
        <converters:InvertedHeightConverter x:Key="InvertedHeightConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#222" Padding="10" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Measurement Graph (Last 5 Values)" 
                          FontWeight="Bold" Foreground="White" 
                          VerticalAlignment="Center" Margin="0,0,20,0"/>

                <TextBlock Grid.Column="1" Text="Select Entity:" Foreground="#888" 
                          VerticalAlignment="Center" Margin="0,0,10,0"/>

                <ComboBox Grid.Column="2" ItemsSource="{Binding Servers}" 
                         SelectedItem="{Binding SelectedServer}"
                         DisplayMemberPath="Name" Width="200" HorizontalAlignment="Left"
                         Background="#333" Foreground="White" BorderBrush="#555"
                         Margin="0,0,10,0">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsHighlighted" Value="True">
                                    <Setter Property="Background" Value="#555"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Current: " Foreground="#888"/>
                    <TextBlock Text="{Binding SelectedServer.MeasurementDisplay}" 
                              Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="  Status: " Foreground="#888" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding SelectedServer.Status}" Foreground="White"/>
                    <TextBlock Text="  Type: " Foreground="#888" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding SelectedServer.Type.Name}" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Graph Area -->
        <Border Grid.Row="1" Background="#222" Margin="5" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Bar Chart Canvas -->
                <Canvas Grid.Row="0" Background="#1a1a1a" 
                       Margin="60,20,20,60" ClipToBounds="False"
                       Height="250" Width="650">

                    <!-- Y-Axis -->
                    <Line X1="30" Y1="10" X2="30" Y2="210" 
                         Stroke="#666" StrokeThickness="2"/>

                    <!-- X-Axis -->
                    <Line X1="30" Y1="210" X2="620" Y2="210" 
                         Stroke="#666" StrokeThickness="2"/>

                    <!-- Y-Axis Label - Positioned away from numbers -->
                    <TextBlock Text="Load (%)" Canvas.Left="-45" Canvas.Top="100" 
                              Foreground="#888" FontSize="11" FontWeight="Bold">
                        <TextBlock.RenderTransform>
                            <RotateTransform Angle="-90" CenterX="0" CenterY="0"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <!-- X-Axis Label -->
                    <TextBlock Text="Time (Last 5 Measurements)" Canvas.Left="250" Canvas.Top="230" 
                              Foreground="#888" FontSize="11" FontWeight="Bold"/>

                    <!-- Y-Axis Markers and Grid Lines -->
                    <TextBlock Text="100" Canvas.Left="5" Canvas.Top="5" Foreground="#888" FontSize="10"/>
                    <Line X1="25" Y1="10" X2="35" Y2="10" Stroke="#666" StrokeThickness="1"/>
                    <Line X1="30" Y1="10" X2="620" Y2="10" Stroke="#333" StrokeThickness="0.5" StrokeDashArray="2,2"/>

                    <TextBlock Text="75" Canvas.Left="10" Canvas.Top="55" Foreground="#888" FontSize="10"/>
                    <Line X1="25" Y1="60" X2="35" Y2="60" Stroke="#666" StrokeThickness="1"/>
                    <Line X1="30" Y1="60" X2="620" Y2="60" Stroke="#333" StrokeThickness="0.5" StrokeDashArray="2,2"/>

                    <TextBlock Text="50" Canvas.Left="10" Canvas.Top="105" Foreground="#888" FontSize="10"/>
                    <Line X1="25" Y1="110" X2="35" Y2="110" Stroke="#666" StrokeThickness="1"/>
                    <Line X1="30" Y1="110" X2="620" Y2="110" Stroke="#333" StrokeThickness="0.5" StrokeDashArray="2,2"/>

                    <TextBlock Text="45" Canvas.Left="10" Canvas.Top="119" Foreground="#0f4" FontSize="10"/>
                    <Line X1="25" Y1="124" X2="35" Y2="124" Stroke="#0f4" StrokeThickness="1"/>

                    <TextBlock Text="25" Canvas.Left="10" Canvas.Top="155" Foreground="#888" FontSize="10"/>
                    <Line X1="25" Y1="160" X2="35" Y2="160" Stroke="#666" StrokeThickness="1"/>
                    <Line X1="30" Y1="160" X2="620" Y2="160" Stroke="#333" StrokeThickness="0.5" StrokeDashArray="2,2"/>

                    <TextBlock Text="0" Canvas.Left="15" Canvas.Top="205" Foreground="#888" FontSize="10"/>

                    <!-- Valid Range Indicator (45-75%) - Corrected -->
                    <Rectangle Canvas.Left="30" Canvas.Top="60" 
                              Width="590" Height="64" 
                              Fill="#0f4" Opacity="0.05"/>
                    <Line X1="30" Y1="124" X2="620" Y2="124" Stroke="#0f4" StrokeThickness="1" StrokeDashArray="4,2" Opacity="0.5"/>
                    <Line X1="30" Y1="60" X2="620" Y2="60" Stroke="#0f4" StrokeThickness="1" StrokeDashArray="4,2" Opacity="0.5"/>

                    <TextBlock Text="Valid Range: 45-75%" Canvas.Left="500" Canvas.Top="15" 
                              Foreground="#0f4" FontSize="11" FontWeight="Bold"/>

                    <!-- Bars Container -->
                    <ItemsControl ItemsSource="{Binding MeasurementBars}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Canvas>
                                    <!-- Bar -->
                                    <Rectangle Width="60" 
                                              Height="{Binding Height}"
                                              Fill="{Binding Color}">
                                        <Rectangle.RenderTransform>
                                            <TranslateTransform X="{Binding X}" 
                                                              Y="{Binding Path=Height, Converter={StaticResource InvertedHeightConverter}}"/>
                                        </Rectangle.RenderTransform>
                                        <Rectangle.Effect>
                                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3"/>
                                        </Rectangle.Effect>
                                        <Rectangle.ToolTip>
                                            <ToolTip>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Value, StringFormat='Value: {0:F0}%'}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Time, StringFormat='Time: {0:HH:mm:ss}'}"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </Rectangle.ToolTip>
                                    </Rectangle>

                                    <!-- Value Label on top of bar -->
                                    <TextBlock Text="{Binding ValueLabel}" 
                                              Foreground="White" 
                                              FontSize="10"
                                              FontWeight="Bold">
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform X="{Binding X}" 
                                                              Y="{Binding Path=Height, Converter={StaticResource InvertedHeightConverter}}"/>
                                        </TextBlock.RenderTransform>
                                        <TextBlock.Margin>
                                            <Thickness Left="15" Top="-15"/>
                                        </TextBlock.Margin>
                                    </TextBlock>
                                </Canvas>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Time Labels on X-axis -->
                    <ItemsControl ItemsSource="{Binding MeasurementBars}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TimeLabel}" 
                                          Foreground="#888" 
                                          FontSize="9">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform X="{Binding X}" Y="215"/>
                                    </TextBlock.RenderTransform>
                                    <TextBlock.Margin>
                                        <Thickness Left="5"/>
                                    </TextBlock.Margin>
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>

                <!-- Legend -->
                <Border Grid.Row="1" Background="#1a1a1a" Padding="10" Margin="60,0,20,0">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="20" Height="10" Fill="Lime" Margin="0,0,5,0"/>
                        <TextBlock Text="Valid (45-75%)" Foreground="#888" Margin="0,0,20,0"/>
                        <Rectangle Width="20" Height="10" Fill="#ff6464" Margin="0,0,5,0"/>
                        <TextBlock Text="Out of Range" Foreground="#888" Margin="0,0,20,0"/>
                        <TextBlock Text="Chart updates in real-time (last 5 measurements)" 
                                  Foreground="#666" 
                                  HorizontalAlignment="Right" Margin="20,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>