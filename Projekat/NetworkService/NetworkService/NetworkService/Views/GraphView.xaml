<!-- GraphView.xaml -->
<UserControl x:Class="NetworkService.Views.GraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:NetworkService.Converters"
             Background="#1a1a1a"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True"
             TextOptions.TextFormattingMode="Display">

    <UserControl.Resources>
        <converters:InvertedHeightConverter x:Key="InvertedHeightConverter"/>

        <!-- DarkComboBox (isti kao u EntitiesView) -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      Background="{TemplateBinding Background}"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" Margin="8,5"/>
                                                <Path Grid.Column="1" Fill="White" Data="M 0 0 L 4 4 L 8 0 Z"
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter x:Name="ContentPresenter"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          Margin="8,5"
                                          IsHitTestVisible="False"/>

                            <Popup x:Name="Popup" Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               MinWidth="{Binding ActualWidth, ElementName=ToggleButton}">
                                <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="#333" BorderBrush="#555" BorderThickness="1">
                                        <ScrollViewer>
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- (opciono) Usklađeni ComboBoxItem stil -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#555"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#222" Padding="10" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Measurement Graph (Last 5 Values)"
                           FontWeight="Bold" Foreground="White"
                           VerticalAlignment="Center" Margin="0,0,20,0"/>

                <TextBlock Grid.Column="1" Text="Select Entity:" Foreground="#888"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>

                <ComboBox Grid.Column="2"
          ItemsSource="{Binding Servers}"
          SelectedItem="{Binding SelectedServer}"
          DisplayMemberPath="Name"
          Width="200"
          HorizontalAlignment="Left"
          Style="{StaticResource DarkComboBox}">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsHighlighted" Value="True">
                                    <Setter Property="Background" Value="#555"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Current: " Foreground="#888"/>
                    <TextBlock Text="{Binding SelectedServer.MeasurementDisplay}"
                               Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="  Status: " Foreground="#888" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding SelectedServer.Status}" Foreground="White"/>
                    <TextBlock Text="  Type: " Foreground="#888" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding SelectedServer.Type.Name}" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Graph Area -->
        <Border Grid.Row="1" Background="#222" Margin="5" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Bar Chart Canvas -->
                <Canvas Grid.Row="0" Background="#1a1a1a"
                        Margin="50,20,50,20" ClipToBounds="False"
                        Height="400" Width="800">

                    <!-- Y-Axis (X=70) -->
                    <Line X1="70" Y1="20" X2="70" Y2="340"
                          Stroke="#666" StrokeThickness="2"/>

                    <!-- X-Axis (baseline = 340; start X=70) -->
                    <Line X1="70" Y1="340" X2="750" Y2="340"
                          Stroke="#666" StrokeThickness="2"/>

                    <!-- Y-Axis Label: levo, poravnata sa 50% (Y=180) -->
                    <TextBlock Text="Values (%)"
                               Foreground="#888" FontSize="12" FontWeight="Bold"
                               RenderTransformOrigin="0.5,0.5"
                               Canvas.Left="40" Canvas.Top="180">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="-90"/>
                                <TranslateTransform X="-45"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <!-- X-Axis Label -->
                    <TextBlock Text="Time" Canvas.Left="410" Canvas.Top="365"
                               Foreground="#888" FontSize="12" FontWeight="Bold"/>

                    <!-- Grid/Markers (usklađeno sa X=70) -->
                    <TextBlock Text="100" Canvas.Left="40" Canvas.Top="15" Foreground="#888" FontSize="11"/>
                    <Line X1="65" Y1="20" X2="75" Y2="20" Stroke="#666" StrokeThickness="1"/>
                    <Line X1="70" Y1="20" X2="750" Y2="20" Stroke="#333" StrokeThickness="0.5" StrokeDashArray="2,2"/>

                    <TextBlock Text="75" Canvas.Left="45" Canvas.Top="95" Foreground="#0f4" FontSize="11" FontWeight="Bold"/>
                    <Line X1="65" Y1="100" X2="75" Y2="100" Stroke="#0f4" StrokeThickness="1.5"/>
                    <Line X1="70" Y1="100" X2="750" Y2="100" Stroke="#0f4" StrokeThickness="0.5" StrokeDashArray="4,2" Opacity="0.7"/>

                    <TextBlock Text="50" Canvas.Left="45" Canvas.Top="175" Foreground="#888" FontSize="11"/>
                    <Line X1="65" Y1="180" X2="75" Y2="180" Stroke="#666" StrokeThickness="1"/>
                    <Line X1="70" Y1="180" X2="750" Y2="180" Stroke="#333" StrokeThickness="0.5" StrokeDashArray="2,2"/>

                    <TextBlock Text="45" Canvas.Left="45" Canvas.Top="193" Foreground="#0f4" FontSize="11" FontWeight="Bold"/>
                    <Line X1="65" Y1="198" X2="75" Y2="198" Stroke="#0f4" StrokeThickness="1.5"/>
                    <Line X1="70" Y1="198" X2="750" Y2="198" Stroke="#0f4" StrokeThickness="0.5" StrokeDashArray="4,2" Opacity="0.7"/>

                    <TextBlock Text="25" Canvas.Left="45" Canvas.Top="255" Foreground="#888" FontSize="11"/>
                    <Line X1="65" Y1="260" X2="75" Y2="260" Stroke="#666" StrokeThickness="1"/>
                    <Line X1="70" Y1="260" X2="750" Y2="260" Stroke="#333" StrokeThickness="0.5" StrokeDashArray="2,2"/>

                    <TextBlock Text="0" Canvas.Left="50" Canvas.Top="335" Foreground="#888" FontSize="11"/>

                    <!-- Valid Range background (45–75%) - startuje od X=70 -->
                    <Rectangle Canvas.Left="70" Canvas.Top="100"
                               Width="680" Height="98"
                               Fill="#0f4" Opacity="0.05"/>

                    <!-- Bars -->
                    <ItemsControl ItemsSource="{Binding MeasurementBars}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Canvas>
                                    <!-- Bar (Width = 80) -->
                                    <Rectangle Width="80"
                                               Height="{Binding Height}"
                                               Fill="{Binding Color}">
                                        <Rectangle.RenderTransform>
                                            <TranslateTransform
                                                X="{Binding X}"
                                                Y="{Binding Path=Height, Converter={StaticResource InvertedHeightConverter}, ConverterParameter=340}"/>
                                        </Rectangle.RenderTransform>
                                        <Rectangle.Effect>
                                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3"/>
                                        </Rectangle.Effect>
                                        <Rectangle.ToolTip>
                                            <ToolTip>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Value, StringFormat='Value: {0:F0}%'}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Time, StringFormat='Time: {0:HH:mm:ss}'}"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </Rectangle.ToolTip>
                                    </Rectangle>

                                    <!-- % labela: centrirana iznad stuba -->
                                    <TextBlock Text="{Binding ValueLabel}"
                                               Foreground="White"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               Width="80"
                                               TextAlignment="Center">
                                        <TextBlock.RenderTransform>
                                            <TransformGroup>
                                                <!-- isti X kao bar (levo), pa se centriranje postiže sa Width=80 -->
                                                <TranslateTransform
                                                    X="{Binding X}"
                                                    Y="{Binding Path=Height, Converter={StaticResource InvertedHeightConverter}, ConverterParameter=340}"/>
                                                <TranslateTransform Y="-18"/>
                                            </TransformGroup>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </Canvas>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Time labels: centrirane ispod stuba -->
                    <ItemsControl ItemsSource="{Binding MeasurementBars}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TimeLabel}"
                                           Foreground="#888"
                                           FontSize="10"
                                           Width="80"
                                           TextAlignment="Center">
                                    <TextBlock.RenderTransform>
                                        <!-- isti X kao bar (levo), pa centriranje preko Width=80 -->
                                        <TranslateTransform X="{Binding X}" Y="345"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>

                <!-- Legend -->
                <Border Grid.Row="1" Background="#1a1a1a" Padding="10" Margin="50,10,50,0">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="20" Height="10" Fill="Lime" Margin="0,0,5,0"/>
                        <TextBlock Text="Valid (45-75%)" Foreground="#888" Margin="0,0,20,0"/>
                        <Rectangle Width="20" Height="10" Fill="#ff6464" Margin="0,0,5,0"/>
                        <TextBlock Text="Out of Range" Foreground="#888" Margin="0,0,20,0"/>
                        <TextBlock Text="Chart updates in real-time (last 5 measurements)"
                                   Foreground="#666"
                                   HorizontalAlignment="Right" Margin="20,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
