<Window x:Class="NetworkService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NetworkService.ViewModel"
        xmlns:views="clr-namespace:NetworkService.Views"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="NetworkService Monitor" 
        Height="650" Width="1100"
        Background="#1a1a1a"
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <Window.InputBindings>
        <KeyBinding Key="D1" Modifiers="Ctrl" Command="{Binding SwitchToEntitiesCommand}"/>
        <KeyBinding Key="D2" Modifiers="Ctrl" Command="{Binding SwitchToDisplayCommand}"/>
        <KeyBinding Key="D3" Modifiers="Ctrl" Command="{Binding SwitchToGraphCommand}"/>
        <KeyBinding Key="Z" Modifiers="Ctrl" Command="{Binding UndoCommand}"/>
        <KeyBinding Key="Tab" Modifiers="Alt" Command="{Binding NextTabCommand}"/>
        <KeyBinding Key="C" Modifiers="Ctrl" Command="{Binding FocusTerminalCommand}"/>
    </Window.InputBindings>

    <Window.Resources>
        <DataTemplate DataType="{x:Type local:EntitiesViewModel}">
            <views:EntitiesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:DisplayViewModel}">
            <views:DisplayView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:GraphViewModel}">
            <views:GraphView/>
        </DataTemplate>

        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#0a0a0a" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Server" Width="20" Height="20" 
                                    Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="NetworkService Monitor" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                <TextBlock Grid.Column="1" Text="CG2 T6 G2 P2 - Linux Desktop Application" 
                          Foreground="#888" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Tab Bar and Undo -->
        <Border Grid.Row="1" Background="#1a1a1a" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button Style="{StaticResource TabButtonStyle}" 
                            Command="{Binding SwitchToEntitiesCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="List" Width="14" Height="14" 
                                           Foreground="White" Margin="0,0,5,0"/>
                            <TextBlock Text="Entities" Margin="0,0,5,0"/>
                            <TextBlock Text="(Ctrl+1)" Foreground="#666" FontSize="10"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TabButtonStyle}"
                            Command="{Binding SwitchToDisplayCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Th" Width="14" Height="14" 
                                           Foreground="White" Margin="0,0,5,0"/>
                            <TextBlock Text="Display" Margin="0,0,5,0"/>
                            <TextBlock Text="(Ctrl+2)" Foreground="#666" FontSize="10"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TabButtonStyle}"
                            Command="{Binding SwitchToGraphCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="BarChart" Width="14" Height="14" 
                                           Foreground="White" Margin="0,0,5,0"/>
                            <TextBlock Text="Graph" Margin="0,0,5,0"/>
                            <TextBlock Text="(Ctrl+3)" Foreground="#666" FontSize="10"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Button Grid.Column="2" Style="{StaticResource TabButtonStyle}"
                        Command="{Binding UndoCommand}">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Undo" Width="14" Height="14" 
                                       Foreground="White" Margin="0,0,5,0"/>
                        <TextBlock Text="Undo" Margin="0,0,5,0"/>
                        <TextBlock Text="(Ctrl+Z)" Foreground="#666" FontSize="10"/>
                    </StackPanel>
                </Button>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0">
                    <fa:ImageAwesome Icon="History" Width="12" Height="12" 
                                   Foreground="#888" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="History: 1/1" VerticalAlignment="Center" Foreground="#888"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Grid.Row="2" Content="{Binding CurrentViewModel}" Margin="10"/>

        <!-- Mini Terminal -->
        <Border Grid.Row="3" Background="#0a0a0a" BorderBrush="#2a2a2a" 
                BorderThickness="0,1,0,0" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,2">
                    <fa:ImageAwesome Icon="Terminal" Width="12" Height="12" 
                                   Foreground="#0f0" Margin="0,0,5,0"/>
                    <TextBlock Text="Mini Terminal" Foreground="#888" FontSize="10"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding TerminalOutput}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="#0f0" 
                                          FontFamily="Consolas" FontSize="11"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Grid Grid.Row="2" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <fa:ImageAwesome Icon="ChevronRight" Width="8" Height="8" 
                                       Foreground="#0f0" Margin="0,0,3,0" VerticalAlignment="Center"/>
                        <TextBlock Text="$ " Foreground="#0f0" 
                                  FontFamily="Consolas" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBox Grid.Column="1" Text="{Binding CurrentCommand, UpdateSourceTrigger=PropertyChanged}"
                            Background="Transparent" Foreground="#0f0" BorderThickness="0"
                            FontFamily="Consolas" VerticalAlignment="Center">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding ExecuteTerminalCommand}"/>
                            <KeyBinding Key="Up" Command="{Binding NavigateHistoryUpCommand}"/>
                            <KeyBinding Key="Down" Command="{Binding NavigateHistoryDownCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </Grid>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="#0a0a0a" Padding="5">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="InfoCircle" Width="12" Height="12" 
                                   Foreground="#888" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="#888" FontSize="11"/>
                </StackPanel>
                <TextBlock HorizontalAlignment="Right" Foreground="#666" FontSize="10">
                    <Run Text="Keyboard Shortcuts: Ctrl+1/2/3 (Switch tabs) Ctrl+Z (Undo) Alt+Tab (Next tab) ↑/↓ (Terminal history) Ctrl+C (Focus terminal)"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>