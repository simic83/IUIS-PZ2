<UserControl x:Class="NetworkService.Views.EntitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:NetworkService.Converters"
             Background="#1a1a1a">

    <UserControl.Resources>
        <!-- Style for all MDL2 icons -->
        <Style x:Key="IconText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Converter -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Glyph resources -->
        <sys:String x:Key="Glyph_MapPin">&#xE707;</sys:String>
        <sys:String x:Key="Glyph_Key">&#xE192;</sys:String>
        <sys:String x:Key="Glyph_Tag">&#xE1CB;</sys:String>
        <sys:String x:Key="Glyph_Globe">&#xE774;</sys:String>
        <sys:String x:Key="Glyph_Server">&#xE969;</sys:String>
        <sys:String x:Key="Glyph_Add">&#xE710;</sys:String>
        <sys:String x:Key="Glyph_Delete">&#xE74D;</sys:String>
        <sys:String x:Key="Glyph_Undo">&#xE7A7;</sys:String>
        <sys:String x:Key="Glyph_Warning">&#xE7BA;</sys:String>
        <sys:String x:Key="Glyph_Filter">&#xE71C;</sys:String>
        <sys:String x:Key="Glyph_Tags">&#xE1CB;</sys:String>
        <sys:String x:Key="Glyph_Sort">&#xE8CB;</sys:String>
        <sys:String x:Key="Glyph_Check">&#xE10B;</sys:String>
        <sys:String x:Key="Glyph_Cancel">&#xE10A;</sys:String>

        <!-- RadioButton Style -->
        <Style x:Key="DarkRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="16" Height="16" 
                                    BorderBrush="#888" BorderThickness="1" 
                                    CornerRadius="8" Margin="0,0,5,0">
                                <Ellipse x:Name="CheckMark" Width="8" Height="8" 
                                         Fill="#0f0" Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0a4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Fixed ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" Margin="5,3"/>
                                                <Path Grid.Column="1" Fill="White" Data="M 0 0 L 4 4 L 8 0 Z" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="5,3"
                                              IsHitTestVisible="False"/>
                            <Popup x:Name="Popup" Placement="Bottom" 
                                   IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   AllowsTransparency="True">
                                <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="#333" BorderBrush="#555" BorderThickness="1">
                                        <ScrollViewer>
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#555"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Add New Entity Form -->
        <Border Grid.Column="0" Background="#222" Margin="5" Padding="10" CornerRadius="8">
            <StackPanel>
                <!-- Title -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_MapPin}" FontSize="16"/>
                    <TextBlock Text="Add New Entity (T6 - Servers)" FontWeight="Bold" Foreground="White"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ID -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                        <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Key}" Foreground="#888" FontSize="12"/>
                        <TextBlock Text="ID" Foreground="#888"/>
                    </StackPanel>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding NewServer.Id}"
                             Style="{StaticResource DarkTextBox}"/>

                    <!-- Name -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                        <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Tag}" Foreground="#888" FontSize="12"/>
                        <TextBlock Text="Name" Foreground="#888"/>
                    </StackPanel>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Text="{Binding NewServer.Name}"
                             Style="{StaticResource DarkTextBox}"/>

                    <!-- IP -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                        <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Globe}" Foreground="#888" FontSize="12"/>
                        <TextBlock Text="IP" Foreground="#888"/>
                    </StackPanel>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             Text="{Binding NewServer.IPAddress}"
                             Style="{StaticResource DarkTextBox}"/>

                    <!-- Type -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                        <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Server}" Foreground="#888" FontSize="12"/>
                        <TextBlock Text="Type" Foreground="#888"/>
                    </StackPanel>
                    <ComboBox Grid.Row="3" Grid.Column="1"
                              ItemsSource="{Binding ServerTypes}"
                              SelectedItem="{Binding NewServer.Type}"
                              Style="{StaticResource DarkComboBox}"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal"
                                HorizontalAlignment="Right" Margin="0,10">
                        <Button Command="{Binding AddServerCommand}"
                                Style="{StaticResource ActionButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Add}" FontSize="12"/>
                                <TextBlock Text="Add"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding DeleteServerCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#a40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Delete}" FontSize="12"/>
                                <TextBlock Text="Delete"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding UndoCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#444">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Undo}" FontSize="12"/>
                                <TextBlock Text="Undo"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Validation -->
                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                                Orientation="Horizontal"
                                Visibility="{Binding ValidationMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Style="{StaticResource IconText}" 
                                   Text="{StaticResource Glyph_Warning}" 
                                   Foreground="Red" FontSize="12"/>
                        <TextBlock Text="{Binding ValidationMessage}" 
                                   Foreground="Red" FontSize="11" Margin="0,5"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Search and Filtering -->
        <Border Grid.Column="1" Background="#222" Margin="5" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filter Section -->
                <Border Background="#1a1a1a" Padding="15" CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Filter}" FontSize="14"/>
                            <TextBlock Text="Search and Filtering" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>

                        <!-- Filter Controls - Properly Aligned -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Type Filter -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Tags}" Foreground="#888" FontSize="12"/>
                                <TextBlock Text="Type:" Foreground="#888" VerticalAlignment="Center"/>
                            </StackPanel>

                            <ComboBox Grid.Column="1" 
                                      ItemsSource="{Binding FilterTypes}"
                                      SelectedItem="{Binding SelectedFilterType}"
                                      Style="{StaticResource DarkComboBox}"
                                      VerticalAlignment="Center"
                                      Margin="5,0,20,0"/>

                            <!-- ID Filter -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Sort}" Foreground="#888" FontSize="12"/>
                                <TextBlock Text="ID Filter:" Foreground="#888" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                <RadioButton Content="&lt;" IsChecked="{Binding IsLessThan}" 
                                           Style="{StaticResource DarkRadioButton}"/>
                                <RadioButton Content="&gt;" IsChecked="{Binding IsGreaterThan}" 
                                           Style="{StaticResource DarkRadioButton}"/>
                                <RadioButton Content="=" IsChecked="{Binding IsEqualTo}" 
                                           Style="{StaticResource DarkRadioButton}"/>

                                <TextBlock Text="Value:" Foreground="#888" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <TextBox Text="{Binding FilterIdValue, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="80" Style="{StaticResource DarkTextBox}" 
                                        VerticalAlignment="Center" Margin="0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Data Grid -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding FilteredServers}"
                          SelectedItem="{Binding SelectedServer}"
                          AutoGenerateColumns="False" 
                          Background="#1a1a1a"
                          Foreground="White" 
                          GridLinesVisibility="Horizontal"
                          CanUserAddRows="False" 
                          Margin="10">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="BorderBrush" Value="#555"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="#222"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#333"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="5,2"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="50"/>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type.Name}" Width="100"/>
                        <DataGridTextColumn Header="IP Address" Binding="{Binding IPAddress}" Width="120"/>
                        <DataGridTextColumn Header="Load %" Binding="{Binding MeasurementDisplay}" Width="80"/>

                        <!-- Status with MDL2 -->
                        <DataGridTemplateColumn Header="Status" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Icon -->
                                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,5,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="online">
                                                            <Setter Property="Text" Value="&#xE10B;"/>
                                                            <Setter Property="Foreground" Value="#0f0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="warning">
                                                            <Setter Property="Text" Value="&#xE7BA;"/>
                                                            <Setter Property="Foreground" Value="#fa0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="offline">
                                                            <Setter Property="Text" Value="&#xE10A;"/>
                                                            <Setter Property="Foreground" Value="#f00"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Status Text -->
                                        <TextBlock Text="{Binding Status}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="online">
                                                            <Setter Property="Foreground" Value="#0f0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="warning">
                                                            <Setter Property="Foreground" Value="#fa0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="offline">
                                                            <Setter Property="Foreground" Value="#f00"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Footer count -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left"
                            VerticalAlignment="Bottom" Margin="15,5">
                    <TextBlock Style="{StaticResource IconText}" Text="&#xE969;" Foreground="#888" FontSize="12"/>
                    <TextBlock Text="Network Entities (" Foreground="#888" FontSize="11"/>
                    <TextBlock Text="{Binding FilteredServers.Count}" Foreground="#888" FontSize="11"/>
                    <TextBlock Text=" items)" Foreground="#888" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>