<UserControl x:Class="NetworkService.Views.EntitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:NetworkService.Converters"
             Background="#1a1a1a">

    <UserControl.Resources>
        <!-- Style for all MDL2 icons -->
        <Style x:Key="IconText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Converter -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Glyph resources -->
        <sys:String x:Key="Glyph_MapPin">&#xE707;</sys:String>
        <sys:String x:Key="Glyph_Key">&#xE192;</sys:String>
        <sys:String x:Key="Glyph_Tag">&#xE1CB;</sys:String>
        <sys:String x:Key="Glyph_Globe">&#xE774;</sys:String>
        <sys:String x:Key="Glyph_Server">&#xE969;</sys:String>
        <sys:String x:Key="Glyph_Add">&#xE710;</sys:String>
        <sys:String x:Key="Glyph_Delete">&#xE74D;</sys:String>
        <sys:String x:Key="Glyph_Undo">&#xE7A7;</sys:String>
        <sys:String x:Key="Glyph_Warning">&#xE7BA;</sys:String>
        <sys:String x:Key="Glyph_Filter">&#xE71C;</sys:String>
        <sys:String x:Key="Glyph_Tags">&#xE1CB;</sys:String>
        <sys:String x:Key="Glyph_Sort">&#xE8CB;</sys:String>
        <sys:String x:Key="Glyph_Check">&#xE10B;</sys:String>
        <sys:String x:Key="Glyph_Cancel">&#xE10A;</sys:String>

        <!-- Improved RadioButton Style with better hitbox -->
        <Style x:Key="DarkRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent" Padding="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="18" Height="18" 
                                        BorderBrush="#888" BorderThickness="2" 
                                        CornerRadius="9" Margin="0,0,8,0"
                                        Background="#222">
                                    <Ellipse x:Name="CheckMark" Width="10" Height="10" 
                                             Fill="#0f0" Visibility="Collapsed"/>
                                </Border>
                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0a4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Error TextBox -->
        <Style x:Key="ErrorAwareTextBox" TargetType="TextBox" BasedOn="{StaticResource DarkTextBox}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ValidationMessage}" Value="">
                    <Setter Property="BorderBrush" Value="#555"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ValidationMessage}">
                    <DataTrigger.Value>
                        <sys:String>*</sys:String>
                    </DataTrigger.Value>
                    <Setter Property="BorderBrush" Value="#f33"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Fixed ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" Margin="8,5"/>
                                                <Path Grid.Column="1" Fill="White" Data="M 0 0 L 4 4 L 8 0 Z" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="8,5"
                                              IsHitTestVisible="False"/>
                            <Popup x:Name="Popup" Placement="Bottom" 
                                   IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   AllowsTransparency="True"
                                   MinWidth="{Binding ActualWidth, ElementName=ToggleButton}">
                                <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="#333" BorderBrush="#555" BorderThickness="1">
                                        <ScrollViewer>
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#555"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== DataGrid poravnanja (NOVO) ===== -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="6,0,6,0"/>
        </Style>
        <Style x:Key="CellEditingTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource DarkTextBox}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4,0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
        <Style x:Key="GridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="GridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="#222"/>
            <Setter Property="MinHeight" Value="42"/>
            <Setter Property="Height" Value="42"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2a2a2a"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#444"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Uklonjeno: CenterCheckBoxStyle (više se ne koristi) -->
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Add New Entity Form - Enlarged -->
        <Border Grid.Column="0" Background="#222" Margin="10" Padding="20" CornerRadius="8">
            <StackPanel>
                <!-- Title -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_MapPin}" FontSize="18"/>
                    <TextBlock Text="Add New Entity (T6 - Servers)" FontWeight="Bold" Foreground="White" FontSize="16"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ID -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,8">
                        <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Key}" Foreground="#888" FontSize="14"/>
                        <TextBlock Text="ID" Foreground="#888" FontSize="14"/>
                    </StackPanel>
                    <TextBox x:Name="IdTextBox"
                             Grid.Row="0" Grid.Column="1" 
                             Text="{Binding NewServer.Id, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ErrorAwareTextBox}"/>

                    <!-- Name -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,8">
                        <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Tag}" Foreground="#888" FontSize="14"/>
                        <TextBlock Text="Name" Foreground="#888" FontSize="14"/>
                    </StackPanel>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Text="{Binding NewServer.Name}"
                             Style="{StaticResource DarkTextBox}"/>

                    <!-- IP -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,8">
                        <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Globe}" Foreground="#888" FontSize="14"/>
                        <TextBlock Text="IP" Foreground="#888" FontSize="14"/>
                    </StackPanel>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             Text="{Binding NewServer.IPAddress}"
                             Style="{StaticResource DarkTextBox}"/>

                    <!-- Type -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,8">
                        <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Server}" Foreground="#888" FontSize="14"/>
                        <TextBlock Text="Type" Foreground="#888" FontSize="14"/>
                    </StackPanel>
                    <ComboBox Grid.Row="3" Grid.Column="1"
                              ItemsSource="{Binding ServerTypes}"
                              SelectedItem="{Binding NewServer.Type}"
                              Style="{StaticResource DarkComboBox}"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal"
                                HorizontalAlignment="Right" Margin="0,20">
                        <Button Command="{Binding AddServerCommand}"
                                Style="{StaticResource ActionButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Add}" FontSize="14"/>
                                <TextBlock Text="Add" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding DeleteServerCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#a40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Delete}" FontSize="14"/>
                                <TextBlock Text="Delete" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding UndoCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#444">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Undo}" FontSize="14"/>
                                <TextBlock Text="Undo" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Validation -->
                    <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#2a0000" BorderBrush="#f33" BorderThickness="1.5"
                            CornerRadius="6"
                            Padding="8"
                            Visibility="{Binding ValidationMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IconText}" 
                                       Text="{StaticResource Glyph_Warning}" 
                                       Foreground="#f66" FontSize="12"/>
                            <TextBlock Text="{Binding ValidationMessage}" 
                                       Foreground="#f99" FontSize="12" Margin="4,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Search and Filtering + Tabela (DESNI PANEL) -->
        <Border Grid.Column="1" Background="#222" Margin="10" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#1a1a1a" Padding="20" CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Style="{StaticResource IconText}" Text="{StaticResource Glyph_Filter}" FontSize="16"/>
                            <TextBlock Text="Search and Filtering" FontWeight="Bold" Foreground="White" FontSize="16"/>
                        </StackPanel>

                        <!-- Filter Controls: Combined in a single block -->
                        <Grid Grid.Row="1">
                            <Border Background="#2a2a2a" BorderBrush="#444" BorderThickness="1"
                                    CornerRadius="5" Padding="15">
                                <StackPanel>

                                    <!-- TYPE (prvo) -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Style="{StaticResource IconText}" 
                                                   Text="{StaticResource Glyph_Server}" 
                                                   Foreground="#0a9" FontSize="14"/>
                                        <TextBlock Text="Filter by Type" Foreground="#0a9" 
                                                   FontWeight="Bold" VerticalAlignment="Center" FontSize="14"/>
                                    </StackPanel>

                                    <ComboBox ItemsSource="{Binding FilterTypes}"
                                              SelectedItem="{Binding SelectedFilterType}"
                                              Style="{StaticResource DarkComboBox}"
                                              VerticalAlignment="Center" />

                                    <!-- razmak -->
                                    <Border Height="12" Background="Transparent"/>

                                    <!-- ID (ispod) -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Style="{StaticResource IconText}" 
                                                   Text="{StaticResource Glyph_Key}" 
                                                   Foreground="#f90" FontSize="14"/>
                                        <TextBlock Text="Filter by ID" Foreground="#f90" 
                                                   FontWeight="Bold" VerticalAlignment="Center" FontSize="14"/>
                                    </StackPanel>

                                    <!-- Jedan red: vrednost + 3 radio dugmeta -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ID vrednost -->
                                        <TextBox Grid.Column="0"
                                                 Text="{Binding FilterIdValue, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource DarkTextBox}"
                                                 Margin="0"
                                                 VerticalAlignment="Center" />

                                        <!-- < -->
                                        <RadioButton Grid.Column="1"
                                                     GroupName="IdFilter"
                                                     IsChecked="{Binding IsLessThan}"
                                                     Style="{StaticResource DarkRadioButton}"
                                                     Margin="8,0,0,0">
                                            <TextBlock Text="&lt;" FontSize="14"/>
                                        </RadioButton>

                                        <!-- > -->
                                        <RadioButton Grid.Column="2"
                                                     GroupName="IdFilter"
                                                     IsChecked="{Binding IsGreaterThan}"
                                                     Style="{StaticResource DarkRadioButton}"
                                                     Margin="4,0,0,0">
                                            <TextBlock Text="&gt;" FontSize="14"/>
                                        </RadioButton>

                                        <!-- = -->
                                        <RadioButton Grid.Column="3"
                                                     GroupName="IdFilter"
                                                     IsChecked="{Binding IsEqualTo}"
                                                     Style="{StaticResource DarkRadioButton}"
                                                     Margin="4,0,0,0">
                                            <TextBlock Text="=" FontSize="14"/>
                                        </RadioButton>
                                    </Grid>

                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Data Grid -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding FilteredServers}"
                          SelectedItem="{Binding SelectedServer}"
                          AutoGenerateColumns="False" 
                          Background="#1a1a1a"
                          Foreground="White" 
                          GridLinesVisibility="Horizontal"
                          CanUserAddRows="False" 
                          Margin="15,15,15,8"
                          FontSize="13"
                          HeadersVisibility="Column"
                          RowStyle="{StaticResource GridRowStyle}"
                          CellStyle="{StaticResource GridCellStyle}"
                          RowHeaderWidth="0">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="BorderBrush" Value="#555"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="FontSize" Value="14"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <!-- Uklonjeno: Select kolona -->

                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"
                                            ElementStyle="{StaticResource CellTextStyle}"
                                            EditingElementStyle="{StaticResource CellEditingTextBoxStyle}"/>

                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"
                                            ElementStyle="{StaticResource CellTextStyle}"
                                            EditingElementStyle="{StaticResource CellEditingTextBoxStyle}"/>

                        <DataGridTextColumn Header="Type" Binding="{Binding Type.Name}" Width="120"
                                            ElementStyle="{StaticResource CellTextStyle}"
                                            EditingElementStyle="{StaticResource CellEditingTextBoxStyle}"/>

                        <DataGridTextColumn Header="IP Address" Binding="{Binding IPAddress}" Width="150"
                                            ElementStyle="{StaticResource CellTextStyle}"
                                            EditingElementStyle="{StaticResource CellEditingTextBoxStyle}"/>

                        <DataGridTextColumn Header="Load (%)" Binding="{Binding MeasurementDisplay}" Width="200"
                                            ElementStyle="{StaticResource CellTextStyle}"
                                            EditingElementStyle="{StaticResource CellEditingTextBoxStyle}"/>

                        <DataGridTemplateColumn Header="Status" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="online">
                                                            <Setter Property="Text" Value="&#xE10B;"/>
                                                            <Setter Property="Foreground" Value="#0f0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="warning">
                                                            <Setter Property="Text" Value="&#xE7BA;"/>
                                                            <Setter Property="Foreground" Value="#fa0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="offline">
                                                            <Setter Property="Text" Value="&#xE10A;"/>
                                                            <Setter Property="Foreground" Value="#f00"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Text="{Binding Status}" FontSize="13" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="online">
                                                            <Setter Property="Foreground" Value="#0f0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="warning">
                                                            <Setter Property="Foreground" Value="#fa0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="offline">
                                                            <Setter Property="Foreground" Value="#f00"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Footer count -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left"
                            Margin="20,4,20,12">
                    <TextBlock Text="Network Entities (" Foreground="#888" FontSize="12"/>
                    <TextBlock Text="{Binding FilteredServers.Count}" Foreground="#888" FontSize="12"/>
                    <TextBlock Text=" items)" Foreground="#888" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
