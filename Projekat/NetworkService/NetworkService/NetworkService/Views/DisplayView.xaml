<!-- DisplayView.xaml -->
<UserControl x:Class="NetworkService.Views.DisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:NetworkService.Converters"
             Background="#1a1a1a">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Dark ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#555"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#444"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Button Style for Connection Mode -->
        <Style x:Key="ConnectionButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="#666" BorderThickness="1" CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0a6"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#0f0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Entity Tree -->
        <Border Grid.Column="0" Background="#222" Margin="5" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Entity Tree" FontWeight="Bold"
                           Foreground="White" Margin="10,10,10,5"/>

                <TreeView Grid.Row="1" ItemsSource="{Binding GroupedServers}"
                          Background="Transparent" Foreground="White"
                          BorderThickness="0" Margin="5">
                    <TreeView.Resources>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </TreeView.Resources>

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Servers}">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           Margin="0,0,6,0"
                                           VerticalAlignment="Center"
                                           Foreground="White">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="&#xE7C3;"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TypeName}" Value="Web">
                                                    <Setter Property="Text" Value="&#xE774;"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding TypeName}" Value="Database">
                                                    <Setter Property="Text" Value="&#xE7F8;"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding TypeName}" Value="File">
                                                    <Setter Property="Text" Value="&#xE7C3;"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="{Binding TypeName}" Foreground="White"/>
                                <TextBlock Text=" (" Foreground="White"/>
                                <TextBlock Text="{Binding Servers.Count}" Foreground="White"/>
                                <TextBlock Text=")" Foreground="White"/>
                            </StackPanel>

                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#333" CornerRadius="3" Margin="2"
                                            Padding="5" MouseMove="Border_MouseMove"
                                            MouseLeftButtonDown="Border_MouseLeftButtonDown">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#444"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Id, StringFormat='{}{0:000}'}"
                                                       Margin="0,0,5,0" Foreground="White"/>
                                            <TextBlock Text="{Binding Name}" Margin="0,0,5,0" Foreground="White"/>
                                            <TextBlock Text="(" Foreground="White"/>
                                            <TextBlock Text="{Binding MeasurementDisplay}" Foreground="White"/>
                                            <TextBlock Text=")" Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="10">
                    <ToggleButton Content="Connection Mode (Ctrl+C)"
              IsChecked="{Binding IsConnectionMode}"
              Style="{StaticResource ConnectionButtonStyle}"
              ToolTip="Toggle connection mode to link servers (Ctrl+C)"/>
                    <Button Content="Clear Connections (Ctrl+K)"
        Command="{Binding ClearConnectionsCommand}"
        Background="#a44" Foreground="White" Padding="10,5" Margin="0,0,0,5"
        ToolTip="Remove all server connections (Ctrl+K)"/>
                    <Button Content="Clear All Slots (Ctrl+L)"
        Command="{Binding ClearSlotsCommand}"
        Background="#444" Foreground="White" Padding="10,5"
        ToolTip="Remove all servers from display grid (Ctrl+L)"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Network Display Grid -->
        <Border Grid.Column="1" Background="#222" Margin="5" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Network Display Grid (12 slots - Drag and Drop enabled)"
                           FontWeight="Bold" Foreground="White" Margin="10"/>

                <!-- Main display area with both slots and connections -->
                <Grid Grid.Row="1" x:Name="MainDisplayGrid" Margin="10">
                    <!-- Grid of Slots (bottom layer) -->
                    <ItemsControl x:Name="SlotsItemsControl" ItemsSource="{Binding DisplaySlots}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="3" Columns="4"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5"
                                        AllowDrop="True" Drop="Canvas_Drop" DragOver="Canvas_DragOver" DragLeave="Canvas_DragLeave"
                                        Background="#1a1a1a" Tag="{Binding SlotIndex}" MinHeight="100"
                                        MouseLeftButtonDown="SlotBorder_MouseLeftButtonDown"
                                        MouseRightButtonDown="SlotBorder_MouseRightButtonDown">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush" Value="#444"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding DataContext.IsConnectionMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                        <Condition Binding="{Binding Server, Converter={StaticResource NotNullToVisibilityConverter}}" Value="Visible"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="BorderBrush" Value="#0af"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                    <Setter Property="Cursor" Value="Cross"/>
                                                </MultiDataTrigger>

                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding DataContext.IsDragging, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                        <Condition Binding="{Binding IsDragOver}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                    <Setter Property="BorderBrush">
                                                        <Setter.Value>
                                                            <DrawingBrush Viewport="0,0,8,8" ViewportUnits="Absolute" TileMode="Tile">
                                                                <DrawingBrush.Drawing>
                                                                    <DrawingGroup>
                                                                        <GeometryDrawing Brush="#666">
                                                                            <GeometryDrawing.Geometry>
                                                                                <GeometryGroup>
                                                                                    <RectangleGeometry Rect="0,0,50,50"/>
                                                                                    <RectangleGeometry Rect="50,50,50,50"/>
                                                                                </GeometryGroup>
                                                                            </GeometryDrawing.Geometry>
                                                                        </GeometryDrawing>
                                                                    </DrawingGroup>
                                                                </DrawingBrush.Drawing>
                                                            </DrawingBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </MultiDataTrigger>

                                                <DataTrigger Binding="{Binding IsDragOver}" Value="True">
                                                    <Setter Property="BorderBrush" Value="#0f0"/>
                                                    <Setter Property="BorderThickness" Value="3"/>
                                                    <Setter Property="Background" Value="#0a2a0a"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <!-- Empty Slot Display -->
                                        <Grid Visibility="{Binding Server, Converter={StaticResource NullToVisibilityConverter}}">
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <StackPanel>
                                                    <StackPanel.Style>
                                                        <Style TargetType="StackPanel">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsDragging, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </StackPanel.Style>
                                                    <TextBlock Text="{Binding SlotIndex, StringFormat='Slot {0}'}"
                                                               Foreground="#555" HorizontalAlignment="Center"/>
                                                </StackPanel>

                                                <StackPanel>
                                                    <StackPanel.Style>
                                                        <Style TargetType="StackPanel">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsDragging, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </StackPanel.Style>
                                                    <TextBlock Text="&#xE898;" FontFamily="Segoe MDL2 Assets"
                                                               FontSize="24" Foreground="#888" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Drop Here" FontSize="12" FontWeight="Bold"
                                                               Foreground="#888" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Server Display when placed -->
                                        <Border x:Name="ServerBorder" Visibility="{Binding Server, Converter={StaticResource NotNullToVisibilityConverter}}"
                                                Padding="10" CornerRadius="3"
                                                ToolTip="Right-click to remove from slot">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="Background" Value="#333"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.9"/>
                                                        </Trigger>

                                                        <DataTrigger Binding="{Binding Server.Status}" Value="online">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                        <GradientStop Color="#1a3a1a" Offset="0"/>
                                                                        <GradientStop Color="#0a2a0a" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="BorderBrush" Value="#0f0"/>
                                                        </DataTrigger>

                                                        <DataTrigger Binding="{Binding Server.Status}" Value="warning">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                        <GradientStop Color="#3a3a1a" Offset="0"/>
                                                                        <GradientStop Color="#2a2a0a" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="BorderBrush" Value="#fa0"/>
                                                        </DataTrigger>

                                                        <!-- Offline status with simple visual -->
                                                        <DataTrigger Binding="{Binding Server.Status}" Value="offline">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                        <GradientStop Color="#3a1a1a" Offset="0"/>
                                                                        <GradientStop Color="#2a0a0a" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="BorderBrush" Value="#f00"/>
                                                            <Setter Property="Opacity" Value="0.7"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <StackPanel Grid.Row="0">
                                                    <TextBlock Text="{Binding Server.Name}"
                                                               FontWeight="Bold"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Server.Id, StringFormat='ID: {0:000}'}"
                                                               Foreground="LightGray"
                                                               FontSize="11"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>

                                                <TextBlock Grid.Row="1" Text="{Binding Server.MeasurementDisplay}"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>

                                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding Server.Type.Name}"
                                                               Foreground="LightGray"
                                                               FontSize="10"
                                                               Margin="0,0,5,0"/>
                                                    <TextBlock Text="•" Foreground="Gray" Margin="0,0,5,0" FontSize="10"/>
                                                    <TextBlock Text="{Binding Server.Status}"
                                                               FontSize="10">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Server.Status}" Value="online">
                                                                        <Setter Property="Foreground" Value="#0f0"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Server.Status}" Value="warning">
                                                                        <Setter Property="Foreground" Value="#fa0"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Server.Status}" Value="offline">
                                                                        <Setter Property="Foreground" Value="#f00"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Canvas for Lines (top layer) -->
                    <Canvas x:Name="ConnectionCanvas" IsHitTestVisible="False">
                        <ItemsControl ItemsSource="{Binding Connections}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Line X1="{Binding StartPoint.X}" Y1="{Binding StartPoint.Y}"
                                          X2="{Binding EndPoint.X}" Y2="{Binding EndPoint.Y}"
                                          Stroke="#0af" StrokeThickness="2"
                                          Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Line.Effect>
                                            <DropShadowEffect Color="Cyan" ShadowDepth="0" BlurRadius="10"/>
                                        </Line.Effect>
                                    </Line>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>