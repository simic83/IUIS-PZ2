<!-- MainWindow.xaml -->
<Window x:Class="NetworkService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:NetworkService.ViewModel"
        xmlns:views="clr-namespace:NetworkService.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="NetworkService Monitor" 
        Height="900" Width="1600"
        Background="#1a1a1a"
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Window.InputBindings>
        <KeyBinding Key="D1" Modifiers="Ctrl" Command="{Binding SwitchToEntitiesCommand}"/>
        <KeyBinding Key="D2" Modifiers="Ctrl" Command="{Binding SwitchToDisplayCommand}"/>
        <KeyBinding Key="D3" Modifiers="Ctrl" Command="{Binding SwitchToGraphCommand}"/>
        <KeyBinding Key="Z" Modifiers="Ctrl" Command="{Binding UndoCommand}"/>
        <KeyBinding Key="T" Modifiers="Ctrl" Command="{Binding FocusTerminalCommand}"/>
        <KeyBinding Key="Tab" Modifiers="Ctrl" Command="{Binding NextTabCommand}"/>
        <KeyBinding Key="C" Modifiers="Control" Command="{Binding ToggleConnectionModeCommand}"/>
        <KeyBinding Key="K" Modifiers="Control" Command="{Binding ClearConnectionsCommand}"/>
        <KeyBinding Key="L" Modifiers="Control" Command="{Binding ClearAllSlotsCommand}"/>
    </Window.InputBindings>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:EntitiesViewModel}">
            <views:EntitiesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DisplayViewModel}">
            <views:DisplayView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GraphViewModel}">
            <views:GraphView/>
        </DataTemplate>

        <!-- MDL2 Glyphs -->
        <sys:String x:Key="Glyph_Server">&#xE969;</sys:String>
        <sys:String x:Key="Glyph_List">&#xE8FD;</sys:String>
        <sys:String x:Key="Glyph_Grid">&#xF0E2;</sys:String>
        <sys:String x:Key="Glyph_Chart">&#xE9D2;</sys:String>
        <sys:String x:Key="Glyph_Undo">&#xE7A7;</sys:String>
        <sys:String x:Key="Glyph_History">&#xE81C;</sys:String>
        <sys:String x:Key="Glyph_Terminal">&#xE756;</sys:String>
        <sys:String x:Key="Glyph_Info">&#xE946;</sys:String>
        <sys:String x:Key="Glyph_ChevronRight">&#xE76C;</sys:String>

        <!-- Icon Style -->
        <Style x:Key="IconText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Enhanced Tab Button Style with rounded corners -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3a3a3a"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4a4a4a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="8" Background="#1a1a1a">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#0a0a0a" Padding="10" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource IconText}" 
                                   Text="{StaticResource Glyph_Server}" 
                                   FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="NetworkService Monitor" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="CG2 T6 G2 P2 - Linux Desktop Application" 
                              Foreground="#888" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Tab Bar and Undo -->
            <Border Grid.Row="1" Background="#1a1a1a" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <Button Style="{StaticResource TabButtonStyle}" 
                                Command="{Binding SwitchToEntitiesCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" 
                                           Text="{StaticResource Glyph_List}" 
                                           FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="Entities" Margin="0,0,5,0"/>
                                <TextBlock Text="(Ctrl+1)" Foreground="#667" FontSize="10"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource TabButtonStyle}"
                                Command="{Binding SwitchToDisplayCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" 
                                           Text="{StaticResource Glyph_Grid}" 
                                           FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="Display" Margin="0,0,5,0"/>
                                <TextBlock Text="(Ctrl+2)" Foreground="#667" FontSize="10"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource TabButtonStyle}"
                                Command="{Binding SwitchToGraphCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" 
                                           Text="{StaticResource Glyph_Chart}" 
                                           FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="Graph" Margin="0,0,5,0"/>
                                <TextBlock Text="(Ctrl+3)" Foreground="#667" FontSize="10"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Button Grid.Column="2" Style="{StaticResource TabButtonStyle}"
                            Command="{Binding UndoCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IconText}" 
                                       Text="{StaticResource Glyph_Undo}" 
                                       FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Undo" Margin="0,0,5,0"/>
                            <TextBlock Text="(Ctrl+Z)" Foreground="#667" FontSize="10"/>
                        </StackPanel>
                    </Button>    
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <ContentControl Grid.Row="2" Content="{Binding CurrentViewModel}" Margin="10"/>

            <!-- Terminal Panel -->
            <Border Grid.Row="3" Background="#0a0a0a" BorderBrush="#2a2a2a" 
                    BorderThickness="0,1,0,0" Margin="5" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Terminal Header -->
                    <Border Grid.Row="0" Background="#111" Padding="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IconText}" 
                                       Text="{StaticResource Glyph_Terminal}" 
                                       FontSize="12" Foreground="#0f0" Margin="0,0,5,0"/>
                            <TextBlock Text="Terminal Console" Foreground="#0f0" FontFamily="Consolas" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Terminal Output -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Background="#0a0a0a">
                        <!-- TANKI TAMNI SCROLLBAR (ispravljena smernica) -->
                        <ScrollViewer.Resources>
                            <!-- Thumb izgled -->
                            <Style TargetType="{x:Type Thumb}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Thumb}">
                                            <Border CornerRadius="3" BorderThickness="1"
                            Background="#3a3a3a" BorderBrush="#565656"/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <!-- praktičnost: ne dozvoli da thumb postane premali -->
                                <Setter Property="MinHeight" Value="18"/>
                                <Setter Property="MinWidth" Value="18"/>
                            </Style>

                            <!-- ScrollBar (tanak i ispravne smernice) -->
                            <Style TargetType="{x:Type ScrollBar}">
                                <Setter Property="Background" Value="#151515"/>
                                <Setter Property="SnapsToDevicePixels" Value="True"/>
                                <Setter Property="Width" Value="3"/>
                                <!-- tanji vertikalni -->
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                                            <Grid Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                <Track x:Name="PART_Track"
                               Orientation="Vertical"
                               IsDirectionReversed="True">
                                                    <!-- KLJUČNO: ispravan smer -->
                                                    <Track.DecreaseRepeatButton>
                                                        <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}"
                                              Background="Transparent" BorderThickness="0"/>
                                                    </Track.DecreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb/>
                                                    </Track.Thumb>
                                                    <Track.IncreaseRepeatButton>
                                                        <RepeatButton Command="{x:Static ScrollBar.LineDownCommand}"
                                              Background="Transparent" BorderThickness="0"/>
                                                    </Track.IncreaseRepeatButton>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <!-- Horizontalni slučaj -->
                                <Style.Triggers>
                                    <Trigger Property="Orientation" Value="Horizontal">
                                        <Setter Property="Height" Value="3"/>
                                        <!-- tanji horizontalni -->
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ScrollBar}">
                                                    <Grid Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                        <Track x:Name="PART_Track"
                                       Orientation="Horizontal"
                                       IsDirectionReversed="False">
                                                            <Track.DecreaseRepeatButton>
                                                                <RepeatButton Command="{x:Static ScrollBar.LineLeftCommand}"
                                                      Background="Transparent" BorderThickness="0"/>
                                                            </Track.DecreaseRepeatButton>
                                                            <Track.Thumb>
                                                                <Thumb/>
                                                            </Track.Thumb>
                                                            <Track.IncreaseRepeatButton>
                                                                <RepeatButton Command="{x:Static ScrollBar.LineRightCommand}"
                                                      Background="Transparent" BorderThickness="0"/>
                                                            </Track.IncreaseRepeatButton>
                                                        </Track>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ScrollViewer.Resources>

                        <ItemsControl ItemsSource="{Binding TerminalOutput}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#0f0" 
                                               FontFamily="Consolas" FontSize="11" Margin="5,0"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Terminal Input -->
                    <Grid Grid.Row="2" Background="#111" Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,5,5,5" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource IconText}" 
                                       Text="{StaticResource Glyph_ChevronRight}" 
                                       FontSize="8" Foreground="#0f0" Margin="0,0,3,0"/>
                            <TextBlock Text="$" Foreground="#0f0" FontFamily="Consolas" />
                        </StackPanel>

                        <TextBox x:Name="TerminalInput"
                                 Grid.Column="1" 
                                 Text="{Binding CurrentCommand, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" Foreground="#0f0" BorderThickness="0"
                                 FontFamily="Consolas" VerticalAlignment="Center" Padding="5"
                                 AcceptsReturn="False">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding ExecuteTerminalCommand}"/>
                                <KeyBinding Key="Up" Command="{Binding NavigateHistoryUpCommand}"/>
                                <KeyBinding Key="Down" Command="{Binding NavigateHistoryDownCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="4" Background="#0a0a0a" Padding="5" CornerRadius="0,0,8,8">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource IconText}" 
                                   Text="{StaticResource Glyph_Info}" 
                                   FontSize="12" Foreground="#888" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="#888" FontSize="11"/>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Center" Foreground="#667" FontSize="10">
                        <Run Text="Keyboard Shortcuts: Ctrl+1/2/3 (Switch tabs) Ctrl+Z (Undo) ↑/↓ (Terminal history) Ctrl+T (Focus terminal)"/>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
