<Window x:Class="NetworkService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:NetworkService.ViewModel"
        xmlns:views="clr-namespace:NetworkService.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="NetworkService Monitor" 
        Height="650" Width="1100"
        Background="#1a1a1a"
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Window.InputBindings>
        <KeyBinding Key="D1" Modifiers="Ctrl" Command="{Binding SwitchToEntitiesCommand}"/>
        <KeyBinding Key="D2" Modifiers="Ctrl" Command="{Binding SwitchToDisplayCommand}"/>
        <KeyBinding Key="D3" Modifiers="Ctrl" Command="{Binding SwitchToGraphCommand}"/>
        <KeyBinding Key="Z" Modifiers="Ctrl" Command="{Binding UndoCommand}"/>
        <KeyBinding Key="Tab" Modifiers="Alt" Command="{Binding NextTabCommand}"/>
        <KeyBinding Key="C" Modifiers="Ctrl" Command="{Binding FocusTerminalCommand}"/>
    </Window.InputBindings>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:EntitiesViewModel}">
            <views:EntitiesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DisplayViewModel}">
            <views:DisplayView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GraphViewModel}">
            <views:GraphView/>
        </DataTemplate>

        <!-- MDL2 Glyphs -->
        <sys:String x:Key="Glyph_Server">&#xE969;</sys:String>
        <sys:String x:Key="Glyph_List">&#xE8FD;</sys:String>
        <sys:String x:Key="Glyph_Grid">&#xF0E2;</sys:String>
        <sys:String x:Key="Glyph_Chart">&#xE9D2;</sys:String>
        <sys:String x:Key="Glyph_Undo">&#xE7A7;</sys:String>
        <sys:String x:Key="Glyph_History">&#xE81C;</sys:String>
        <sys:String x:Key="Glyph_Terminal">&#xE756;</sys:String>
        <sys:String x:Key="Glyph_Info">&#xE946;</sys:String>
        <sys:String x:Key="Glyph_ChevronRight">&#xE76C;</sys:String>

        <!-- Icon Style -->
        <Style x:Key="IconText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Enhanced Tab Button Style with rounded corners -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3a3a3a"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4a4a4a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="8" Background="#1a1a1a">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#0a0a0a" Padding="10" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource IconText}" 
                                   Text="{StaticResource Glyph_Server}" 
                                   FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="NetworkService Monitor" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="CG2 T6 G2 P2 - Linux Desktop Application" 
                              Foreground="#888" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Tab Bar and Undo -->
            <Border Grid.Row="1" Background="#1a1a1a" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <Button Style="{StaticResource TabButtonStyle}" 
                                Command="{Binding SwitchToEntitiesCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" 
                                           Text="{StaticResource Glyph_List}" 
                                           FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="Entities" Margin="0,0,5,0"/>
                                <TextBlock Text="(Ctrl+1)" Foreground="#666" FontSize="10"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource TabButtonStyle}"
                                Command="{Binding SwitchToDisplayCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" 
                                           Text="{StaticResource Glyph_Grid}" 
                                           FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="Display" Margin="0,0,5,0"/>
                                <TextBlock Text="(Ctrl+2)" Foreground="#666" FontSize="10"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource TabButtonStyle}"
                                Command="{Binding SwitchToGraphCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconText}" 
                                           Text="{StaticResource Glyph_Chart}" 
                                           FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="Graph" Margin="0,0,5,0"/>
                                <TextBlock Text="(Ctrl+3)" Foreground="#666" FontSize="10"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Button Grid.Column="2" Style="{StaticResource TabButtonStyle}"
                            Command="{Binding UndoCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IconText}" 
                                       Text="{StaticResource Glyph_Undo}" 
                                       FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Undo" Margin="0,0,5,0"/>
                            <TextBlock Text="(Ctrl+Z)" Foreground="#666" FontSize="10"/>
                        </StackPanel>
                    </Button>

                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0">
                        <TextBlock Style="{StaticResource IconText}" 
                                   Text="{StaticResource Glyph_History}" 
                                   FontSize="12" Margin="0,0,5,0" Foreground="#888"/>
                        <TextBlock Text="History: 1/1" VerticalAlignment="Center" Foreground="#888"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <ContentControl Grid.Row="2" Content="{Binding CurrentViewModel}" Margin="10"/>

            <!-- Mini Terminal -->
            <Border Grid.Row="3" Background="#0a0a0a" BorderBrush="#2a2a2a" 
                    BorderThickness="0,1,0,0" Margin="5" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,2">
                        <TextBlock Style="{StaticResource IconText}" 
                                   Text="{StaticResource Glyph_Terminal}" 
                                   FontSize="12" Foreground="#0f0" Margin="0,0,5,0"/>
                        <TextBlock Text="Mini Terminal" Foreground="#888" FontSize="10"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding TerminalOutput}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#0f0" 
                                              FontFamily="Consolas" FontSize="11"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Grid Grid.Row="2" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IconText}" 
                                       Text="{StaticResource Glyph_ChevronRight}" 
                                       FontSize="8" Foreground="#0f0" Margin="0,0,3,0"/>
                            <TextBlock Text="$ " Foreground="#0f0" 
                                      FontFamily="Consolas" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBox Grid.Column="1" Text="{Binding CurrentCommand, UpdateSourceTrigger=PropertyChanged}"
                                Background="Transparent" Foreground="#0f0" BorderThickness="0"
                                FontFamily="Consolas" VerticalAlignment="Center">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding ExecuteTerminalCommand}"/>
                                <KeyBinding Key="Up" Command="{Binding NavigateHistoryUpCommand}"/>
                                <KeyBinding Key="Down" Command="{Binding NavigateHistoryDownCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="4" Background="#0a0a0a" Padding="5" CornerRadius="0,0,8,8">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource IconText}" 
                                   Text="{StaticResource Glyph_Info}" 
                                   FontSize="12" Foreground="#888" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="#888" FontSize="11"/>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Right" Foreground="#666" FontSize="10">
                        <Run Text="Keyboard Shortcuts: Ctrl+1/2/3 (Switch tabs) Ctrl+Z (Undo) Alt+Tab (Next tab) ↑/↓ (Terminal history) Ctrl+C (Focus terminal)"/>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>